{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2020",
    "module": "Node16",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,  
    "alwaysStrict": true,
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,  
    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/buildinfo"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*.ts"
  ]
}